<% layout("./layouts/boilerplate") %> <br /><br />
<div class="row">
  <div class="col-8 offset-2">
    <h4 class="mb-3 text-center">Create new listing</h4>
    <form
      action="/listings"
      method="post"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listing[title]"
          id="title"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="invalid-feedback">Title should be valid</div>
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="mb-3">
        <label for="desc" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          id="desc"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description should be valid</div>
        <div class="valid-feedback">Description looks good!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          id="image"
          required
        />
        <div class="invalid-feedback">Image should be valid</div>
        <div class="valid-feedback">Image looks good!</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="listing[price]"
            id="price"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
          <div class="valid-feedback">Price looks good!</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="loc" class="form-label">Location</label>

          <input
            type="text"
            name="listing[location]"
            class="form-control"
            id="loc"
            placeholder="Jaipur, Rajasthan"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
          <div class="valid-feedback">Location looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="coun" class="form-label">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          id="coun"
          placeholder="India"
          required
        />
        <div class="invalid-feedback">Country should be valid</div>
        <div class="valid-feedback">Country looks good!</div>
      </div>

      <button class="btn btn-dark">Create New List</button><br /><br />
    </form>
  </div>
</div>
